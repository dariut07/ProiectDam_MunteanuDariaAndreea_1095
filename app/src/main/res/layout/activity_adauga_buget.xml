<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdaugaBuget"
    android:background="@color/lightGreen">


    <TextView
        android:id="@+id/textViewAdaugaBuget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introdu suma dorita"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/editTextValoareBuget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdaugaBuget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <Button
        android:id="@+id/btnSalveazaBuget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salveaza"
        app:layout_constraintTop_toBottomOf="@+id/editTextValoareBuget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSterge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sterge"
        app:layout_constraintTop_toBottomOf="@+id/btnSalveazaBuget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>